<div class="container-fluid">
  <nav class="navbar">
    <div class="nav navbar-nav">
      <h1 class="navbar-brand">Lists Like Woah!</h1></div>

      <a id="user-info" class="pull-right" href="#">User Info</a>

  </nav>


  <div class="row">
      <div id="list" class="col-xs-12">
        <h2>My List</h2>

          {{#each items}}
          <form method="post">
            <div class="row">
              <div class="col-xs-1"><h4>{{list_order}}</h4></div>
              <div class="col-xs-6">
                <h5>{{todo}}</h5>
                <p>{{description}}</p>
              </div>
              <div id="buttons" class="col-xs-4">
                <a class="btn btn-primary delete-button" id="delete{{id}}" href="/users/{{user_id}}/{{id}}/delete">Delete</a>
                <a class="btn btn-primary edit-button" id="edit{{id}}" href="/users/{{user_id}}/{{id}}/edit">Edit</a>
              </div>
              <div class="col-xs-1">
                <a id="checked{{id}}" class="checkbox" type="checkbox" href="/users/{{user_id}}/{{id}}/check">Done!</a>
              </div>
            </div>
          </form>

          {{/each}}
      </div>
      <div id="add-item">
        <form id="add-item-form" method="post" action="/users/{{items.0.user_id}}/add/">
          <input name="todo" placeholder="Add To Do" type="text"> </input>
          <input name="description" placeholder="Item Description" type="text"> </input>
          <input name="length" style="display:none" value="{{items.length}}"></input>
          <input type="submit" value="Submit"></input>
        </form>
      </div>

  </div>
</div>
